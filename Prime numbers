#include <stdio.h> Â  
int prime();
int main()
{
 int num, check;
 printf("Enter the positive num=");
 scanf("%d",&num);
 check=prime(num,num/2);
 if(check==1)
 {
  printf("%d is prime number",num);
   }
 else
  {
  printf("%d is not a prime number",num);
  }
 return 0;
}
int prime(num,i)
{
 if(i==1)
  {
   return 1;
    }
 else
  {
   if(num%i==0)
    {
    return 0;
    }
   else
   {
    return prime(num,i-1);
    }
  }
 
  
}
